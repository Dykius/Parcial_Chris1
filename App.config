<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<!-- Configuración del Framework -->
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<!-- Configuraciones de la aplicación -->
	<appSettings>
		<!-- Configuración de archivos -->
		<add key="RutaArchivosCSV" value=".\Archivos\" />
		<add key="NombreArchivoEstudiantes" value="estudiantes.csv" />
		<add key="CrearRespaldosAutomaticos" value="true" />
		<add key="MaximoRespaldos" value="10" />

		<!-- Configuración de correo electrónico -->
		<add key="ServidorSMTP" value="smtp.gmail.com" />
		<add key="PuertoSMTP" value="587" />
		<add key="UsuarioCorreo" value="tu_correo@gmail.com" />
		<add key="PasswordCorreo" value="tu_app_password" />
		<add key="HabilitarSSL" value="true" />
		<add key="TimeoutCorreo" value="30000" />

		<!-- Dominios de correo permitidos -->
		<add key="DominiosPermitidos" value="gmail.com,outlook.com,hotmail.com,yahoo.com,yahoo.es,institutotecnologico.edu.co,sena.edu.co,unal.edu.co,javeriana.edu.co,andes.edu.co,unisabana.edu.co" />

		<!-- Configuración de validaciones -->
		<add key="NotaMinima" value="0.0" />
		<add key="NotaMaxima" value="5.0" />
		<add key="NotaAprobacion" value="3.0" />
		<add key="EdadMinima" value="1" />
		<add key="EdadMaxima" value="120" />

		<!-- Configuración de la interfaz -->
		<add key="TemaOscuro" value="false" />
		<add key="IdiomaInterfaz" value="es-CO" />
		<add key="MostrarNotificaciones" value="true" />
		<add key="GuardadoAutomatico" value="true" />
		<add key="IntervaloGuardadoMinutos" value="5" />

		<!-- Configuración de reportes -->
		<add key="FormatoFechaReportes" value="dd/MM/yyyy" />
		<add key="IncluirEstadisticas" value="true" />
		<add key="RutaReportes" value=".\Reportes\" />

		<!-- Configuración de logs -->
		<add key="HabilitarLogs" value="true" />
		<add key="NivelLog" value="INFO" />
		<add key="RutaLogs" value=".\Logs\" />
		<add key="TamañoMaximoLogMB" value="10" />

		<!-- Configuración de seguridad -->
		<add key="RequeirConfirmacionEliminar" value="true" />
		<add key="MaximoIntentosValidacion" value="3" />
		<add key="BloquearDominiosNoPermitidos" value="false" />

		<!-- Configuración de rendimiento -->
		<add key="MaximoEstudiantesCarga" value="10000" />
		<add key="TamañoMaximoArchivoMB" value="50" />
		<add key="CacheResultadosConsulta" value="true" />

		<!-- Configuración de exportación -->
		<add key="FormatoExportacionPorDefecto" value="CSV" />
		<add key="IncluirEncabezadosExportacion" value="true" />
		<add key="CodificacionArchivos" value="UTF-8" />

		<!-- URLs y servicios externos -->
		<add key="URLAyuda" value="https://github.com/tu-usuario/gestor-estudiantes/wiki" />
		<add key="URLActualizaciones" value="https://api.github.com/repos/tu-usuario/gestor-estudiantes/releases/latest" />
		<add key="VerificarActualizaciones" value="false" />

		<!-- Información de la aplicación -->
		<add key="NombreAplicacion" value="Sistema de Gestión de Estudiantes" />
		<add key="VersionAplicacion" value="1.0.0" />
		<add key="AutorAplicacion" value="Tu Nombre" />
		<add key="FechaCompilacion" value="2024-01-01" />

		<!-- Configuraciones experimentales -->
		<add key="HabilitarFuncionesExperimentales" value="false" />
		<add key="ModoDepuracion" value="false" />
		<add key="MostrarTiemposEjecucion" value="false" />
	</appSettings>

	<!-- Cadenas de conexión (si se usaran bases de datos en el futuro) -->
	<connectionStrings>
		
	</connectionStrings>

	<!-- Configuración del sistema de logs -->
	<system.diagnostics>
		<trace autoflush="true">
			<listeners>
				<add name="textWriterTraceListener"
                     type="System.Diagnostics.TextWriterTraceListener"
                     initializeData=".\Logs\sistema.log" />
			</listeners>
		</trace>
	</system.diagnostics>

	<!-- Configuración de red y proxies -->
	<system.net>
		<defaultProxy enabled="false" useDefaultCredentials="false">
		</defaultProxy>

		<mailSettings>
			<smtp deliveryMethod="Network">
				<network host="smtp.gmail.com"
                         port="587"
                         enableSsl="true"
                         defaultCredentials="false"
                         userName="c06ospina@gmail.com"
                         password="hol" />
			</smtp>
		</mailSettings>
	</system.net>

	<!-- Configuración de runtime -->
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<!-- Redirecciones de ensamblados si son necesarias -->
		</assemblyBinding>

		<!-- Configuración de garbage collector -->
		<gcServer enabled="false" />
		<gcConcurrent enabled="true" />
	</runtime>
</configuration>